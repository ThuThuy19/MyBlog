<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/admin/headAdmin') %>
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">
    <%- include('../partials/admin/headerAdmin') %>
  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">
    <%- include('../partials/admin/slideBarAdmin') %>
  </aside><!-- End Sidebar-->   

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="adminUI">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <!-- Add news -->
      <a class="addBlog" href="/addBlog">
        <span class="add__text">
          <i class="fa-solid fa-plus add__icon"></i>
          Thêm
        </span>
        </a>
      <!-- List news -->
      <div class="blog__container">
        <% data.forEach(function(blog) { %>
        <div class="blog__item col-lg-4 col-sm-12 col-md-6">
          <div class="blog__img">
            <img src="<%= blog.img %>" alt="Anh <%= blog.img %>">
            <div class="category">
              <a href="#" title="View all posts in <%= blog.category %>"><%= blog.category %></a>
            </div>
          </div>
          <div class="blog__content">
            <p class="blog__date date"><%= blog.date %></p>
            <p class="blog__title"><%= blog.title %></p>
            <p class="blog__author">Post by<a href="#"> <%= blog.author %></a></p>      
            <div class="function">
              <button type="submit" class="btn btn__Edit" id="btn__Edit"><a href="editBlog">Sửa</a></button>
              <button type="submit" class="btn btn__Delete" id="btn__Delete" onclick="confirmDelete()"><a href="#">Xóa</a></button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <%-include('../partials/admin/footerAdmin') %>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fa-solid fa-up-long"></i></a>

  <!-- Script bootstrap 5 -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <!-- Template Main JS File -->
  <script src="/js/admin.js"></script>

</body>

</html>