<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/admin/headAdmin') %>
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top d-flex align-items-center">
    <%- include('../partials/admin/headerAdmin') %>
  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">
    <%- include('../partials/admin/slideBarAdmin') %>
  </aside><!-- End Sidebar-->   

  <main id="main" class="main">
    <div class="form__AddBlog">
      <h1 class="title__Function">Edit blog</h1>
      <form action="addNew" method="get">
        <table>
          <tr>
            <td>ID new:</td>
            <td><input type="hidden" name="id" id="id" > 001</td>
          </tr>
          <tr>
            <td>Catgory:</td>
            <td><input type="text" name="category" id="category" value="<%= listBlog[0].category %>"></td>
          </tr>
          <tr>
            <td>Image:</td>
            <td>
              <input class="img" type="image" name="image" id="image" src="<%= listBlog[0].img %>" alt="Anh <%= listBlog[0].img %>">
              <!-- <input type="file" name="" id="" class="img"> -->
            </td>
          </tr>
          <tr>
            <td>Date:</td>
            <td><input type="date" name="date" id="date" value="<%= listBlog[0].date %>"> </td>
          </tr>
          <tr>
            <td>Title:</td>
            <td><input type="text" name="title" id="title" value="<%= listBlog[0].title %>"></td>
          </tr>
          <tr>
            <td>Author:</td>
            <td><input type="text" name="author" id="author" value="<%= listBlog[0].author %>"></td>
          </tr>
          <tr>
            <td>Short content:</td>
            <td>
              <textarea id="shortContent" name="shortContent" rows="4" cols="50"><%= listBlog[0].shortContent %></textarea>
            </td>
          </tr>
          <tr>
            <td>Content:</td>
            <td>
              <textarea id="content" name="content" rows="6" cols="80"><%= detailBlogs[0].content %></textarea>
            </td>
          </tr>
         
        </table>
        <div class="submit">
          <button type="submit" class="btn btn__Send">Send</button>
          <button type="reset" class="btn btn__Send">Cancel</button>
          <a href="/adminUI" class="btn btn__Send">Back</a>
        </div>
      </form>
    </div>
  </main>





  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <%-include('../partials/admin/footerAdmin') %>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fa-solid fa-up-long"></i></a>

  <!-- Script bootstrap 5 -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <!-- Template Main JS File -->
  <script src="/js/admin.js"></script>

</body>

</html>